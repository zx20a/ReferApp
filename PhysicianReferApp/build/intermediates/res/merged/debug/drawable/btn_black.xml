<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFFFFFFF"> </solid>
            <stroke android:color="#FFAAAAAA" android:width="1dp"></stroke>
            <corners android:radius="3dp"></corners>
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>
        </shape>
	</item>
	<item>
        <shape>
            <gradient android:angle="270" android:endColor="#FFAAAAAA" android:startColor="#FFFFFFFF"></gradient>>
            <stroke android:color="#FFAAAAAA" android:width="1dp"></stroke>
            <corners android:radius="3dp"></corners>
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>>
        </shape>
	</item>
</selector>

